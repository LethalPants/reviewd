        "nodemon": "^2.0.2",
        "prettier": "^1.19.1"
    },
    "dependencies": {
        "bcrypt": "^5.0.0",
        "body-parser": "^1.19.0",
        "cors": "^2.8.5",
        "dotenv": "^8.2.0",
        "express": "^4.17.1",
        "jsonwebtoken": "^9.0.0",
        "mongoose": "^5.9.4",
